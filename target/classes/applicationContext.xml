<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">
    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="testBean"
          class="by.home.chaplinskiy.springcourse.TestBean">
        <constructor-arg value="YuriyChaplinskiy"/>
    </bean>
    <bean id="musicTechnoBean"
          class="by.home.chaplinskiy.springcourse.TechnoMusic">
    </bean>
    <bean id="musicPopBean"
          class="by.home.chaplinskiy.springcourse.PopMusic">
    </bean>
    <bean id="musicBean"
          class="by.home.chaplinskiy.springcourse.RockMusic">
    </bean>
    <bean id="musicPlayer"
          class="by.home.chaplinskiy.springcourse.MusicPlayer">
        <constructor-arg ref="musicBean"/>
    </bean>
    <bean id="musicPlayerTechno"
          class="by.home.chaplinskiy.springcourse.MusicPlayer">
        <constructor-arg ref="musicTechnoBean"/>
    </bean>
    <bean id="musicPlayerPop"
          class="by.home.chaplinskiy.springcourse.MusicPlayer"
          scope="prototype">
        <property name="music" ref="musicPopBean"/>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>
    <bean id="musicPlayerRock"
          class="by.home.chaplinskiy.springcourse.MusicPlayer">
        <property name="music" ref="musicBean"/>
        <property name="name" value="Sony"/>
        <property name="volume" value="15"/>

    </bean>


</beans>